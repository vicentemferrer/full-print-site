---
import Logo from '@components/Logo.astro';
import Link from '@components/Link.astro';

import wavesSVG from '@assets/waves-bottom.svg';

import { footer, support, contact, social } from '@lib/data.ts';
---

<footer>
  <section id='waves-bottom'>
    <img src={wavesSVG.src} alt='Brand Waves Bottom' />
  </section>
  <section class='row info'>
    <article>
      <Logo type='footer' />
    </article>
    <article class='xtra-nav'>
      <h4>Servicios</h4>
      <ul>
        {
          footer.map(({ url, title }) => (
            <li>
              <Link {url}>
                {title}
              </Link>
            </li>
          ))
        }
      </ul>
    </article>
    <article class='about'>
      <h4>Informaci√≥n</h4>
      <ul>
        {
          support.map(({ url, title }) => (
            <li>
              <Link {url}>
                {title}
              </Link>
            </li>
          ))
        }
      </ul>
    </article>
    <article class='contact'>
      <h4>Contacto</h4>
      <address>
        <ul>
          {
            contact.map(({ icon, url, title }) => (
              <li>
                <Link {icon} {url}>
                  {` ${title}`}
                </Link>
              </li>
            ))
          }
        </ul>
      </address>
    </article>
  </section>
  <section class='row credits'>
    <article class='text-badge'>
      <p>
        <i class='fi fi-br-copyright'></i><span id='c-year'></span> Full Print | Desarrollado por Vicente Ferrer
      </p>
    </article>
    <article class='social text-badge'>
      {social.map(({ icon, url }) => <Link {icon} {url} />)}
    </article>
  </section>
</footer>

<script>
  import { qs } from "@scripts/utils.mjs";
  const cYear = qs("#c-year");
  cYear.textContent = new Date().getFullYear().toString();
</script>

<style>
  /* Mobile-first Layout */
  footer {
    justify-self: flex-end;

    position: relative;

    background-color: var(--main-background-color);

    display: grid;
    grid-template-columns: auto 1fr auto;

    & .row {
      grid-column: 2 / 3;

      z-index: 0;

      &.info {
        grid-row: 1 / 2;

        display: none;
      }

      &.credits {
        grid-row: 2 / 3;

        display: flex;
        flex-direction: column-reverse;
        justify-content: space-between;
        align-items: center;

        gap: 1rem;

        padding-block: 1rem;

        & article:not(.social) {
          & p {
            & i {
              font-size: 0.8rem;
              margin-right: 0.1rem;
            }
          }
        }

        & .social {
          width: 40vw;

          gap: 1rem;

          display: flex;
          flex-direction: row;
          justify-content: space-between;
        }
      }
    }
  }

  #waves-bottom {
    position: absolute;
    bottom: 0;
    left: 0;

    width: 100%;
    height: 100%;
    overflow: hidden;

    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  /* Larger Screens Adaptations */
  @media (min-width: 768px) {
    footer {
      & .row {
        &.info {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          justify-items: center;
          align-items: self-start;

          grid-auto-flow: column;
          grid-auto-columns: 1fr;

          padding-block: 1rem;

          & ul li {
            list-style: none;
            margin-block: 0.1rem;
          }

          & .xtra-nav {
            display: none;
          }

          & .contact {
            & address {
              font-style: normal;
            }
          }

          & article {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
          }
        }

        &.credits {
          flex-direction: row;

          padding-inline: 3vw;

          & .social {
            width: 18vw;
          }
        }
      }
    }
  }

  @media (min-width: 1024px) {
    footer {
      & .row {
        &.info {
          & .xtra-nav {
            display: flex;
          }
        }

        &.credits {
          padding-inline: 5vw;

          & .social {
            width: 13vw;
          }
        }
      }
    }
  }

  @media (min-width: 1248px) {
    footer {
      & .row {
        &.credits {
          & .social {
            width: 10vw;
          }
        }
      }
    }
  }

  @media (min-width: 1440px) {
    footer {
      & .row {
        &.credits {
          padding-inline: 6vw;
        }
      }
    }
  }

  @media (min-width: 2560px) {
    footer {
      & .row {
        &.credits {
          padding-inline: 8vw;

          & .social {
            width: 7vw;
          }
        }
      }
    }
  }
</style>
