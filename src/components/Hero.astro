<style>
  .hero {
    grid-column: 1 / 4;

    display: grid;
    grid-template-columns: 1fr;

    & picture,
    & .background,
    & .content {
      grid-column: 1 / 2;
      grid-row: 1 / 2;
      width: 100%;
      height: auto;
    }

    & picture {
      z-index: -1;

      & img {
        width: 100%;
        height: auto;
        filter: blur(2px);
        object-fit: cover;

        transition: height .5s ease-in-out;
      }
    }

    & .background {
      background: linear-gradient(var(--shadow-background-color) 55%, transparent);
    }

    & .content {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;

      gap: 1rem;

      & h2 {
        font-size: xx-large;
        width: 12ch;
        text-align: center;
      }
    }
  }

  @media (min-width: 768px) {
    .hero {
      & picture img {
        height: 500px;
      }
    }
  }

  @media (min-width: 1024px) {
    .hero {
      & picture img {
        height: 600px;
      }
    }
  }
</style>
